<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.columbiau">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_crown"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_crown"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebViewActivity"
            android:theme="@style/generalnotitle"></activity>
        <activity
            android:name=".EventPageActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".GatherEventsActivity"
            android:theme="@style/generalnotitle" />
        <activity android:name=".EventsActivity" />
        <activity
            android:name=".CourseActivity"
            android:theme="@style/generalnotitle" />
        <activity android:name=".NewsArticleActivity" />
        <activity
            android:name=".LoadingActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsActivity"
            android:theme="@style/generalnotitle"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/generalnotitle"></activity>
    </application>

</manifest>